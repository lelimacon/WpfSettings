<Window x:Class="WpfSettings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSettingsControl" 
        xmlns:wpfSettings="clr-namespace:WpfSettings"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="600" Width="800"
        DataContext="{Binding ViewModel, RelativeSource={RelativeSource Self}}"
        Background="#F0F0F0" ResizeMode="CanResizeWithGrip">

    <Grid Margin="8,8,12,12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="26" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <local:PlaceHolderTextBox x:Name="SearchBox" Grid.Row="0" Grid.Column="0"
                                    Background="White"
                                    VerticalContentAlignment="Center" FontSize="12"
                                    PlaceHolderText="Search" />

        <Button Grid.Row="0" Grid.Column="0"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                HorizontalAlignment="Right" VerticalAlignment="Stretch"
                Focusable="False">
            <Image Source="icon-search.png" Width="16"></Image>
        </Button>

        <Border Grid.Row="0" Grid.Column="1" BorderBrush="{x:Null}">
            <TextBlock Text="Category Title" FontWeight="Bold"
                       VerticalAlignment="Center" Margin="16,0,0,0" FontSize="12" />
        </Border>

        <wpfSettings:SettingsExplorer x:Name="MyExporer" Grid.Row="1" Grid.Column="0"
                                MyText="{Binding MyNewText}"
                                Margin="0,6,0,0" Itemss="{Binding InternalConfig}" />

        <!--
        <local:SettingsExplorer Grid.Row="1" Grid.Column="0"
                                Margin="0,6,0,0" Items="{Binding Itemss}" />
        -->

        <ScrollViewer Grid.Row="1" Grid.Column="1"
                      Margin="12,8,0,0" VerticalScrollBarVisibility="Auto">
            <!--<local:SettingsPage />-->
        </ScrollViewer>
        
        <Rectangle Grid.Row="1" Grid.Column="1" Margin="12,0,0,0" Height="1"
                   VerticalAlignment="Bottom" Fill="Gray" />

        <StackPanel Grid.Row="2" Grid.Column="1"
                    Orientation="Horizontal" Margin="0,12,0,0"
                    HorizontalAlignment="Right">
            <Button Content="Apply" HorizontalAlignment="Right" Height="24"
                    Width="75" Command="{Binding ApplyCommand}" Margin="0,0,6,0"
                    VerticalAlignment="Bottom" />
            <Button Content="OK" HorizontalAlignment="Right" Height="24"
                    Width="75" Command="{Binding OkCommand}" Margin="0,0,6,0"
                    VerticalAlignment="Bottom" IsDefault="True" />
            <Button Content="Cancel" HorizontalAlignment="Right" Height="24"
                    Width="75" Command="{Binding CancelCommand}" Margin="0,0,0,0"
                    VerticalAlignment="Bottom" IsCancel="True" />
        </StackPanel>

        <!-- /STYLE -->

        <!--
        <Rectangle Grid.Row="1" Grid.Column="1" Height="4"
                   HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="DarkGray" Offset="0" />
                    <GradientStop Color="Transparent" Offset="1" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Rectangle Grid.Row="1" Grid.Column="0" Height="1"
                   VerticalAlignment="Top" Fill="LightGray" />

        <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Width="1"
                   HorizontalAlignment="Right" Fill="LightGray" />

        <Rectangle Grid.Row="2" Grid.Column="1" Height="1"
                   VerticalAlignment="Top" Fill="LightGray" />
        -->

        <!-- /STYLE -->

    </Grid>

</Window>