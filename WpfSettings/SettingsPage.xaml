<UserControl x:Class="WpfSettings.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             x:Name="Root">

    <UserControl.Resources>
        <ResourceDictionary Source="SettingElements/SettingElementsTemplate.xaml" />
    </UserControl.Resources>

    <Grid>
        <ItemsControl DataContext="{Binding ElementName=Root}"
                      ItemsSource="{Binding ConfigElements}"
                      Focusable="False" IsTabStop="False" />
        <Grid x:Name="PreviewBlock" Background="DimGray" Visibility="Collapsed"
              Focusable="False">
            <TextBlock Text="Settings Page" FontWeight="Bold" FontSize="22"
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       Foreground="LightGray" Focusable="False" />
        </Grid>
    </Grid>

</UserControl>