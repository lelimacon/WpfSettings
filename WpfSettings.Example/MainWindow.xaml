<Window x:Class="WpfSettings.Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        DataContext="{Binding ViewModel, RelativeSource={RelativeSource Self}}"
        mc:Ignorable="d"
        Title="MainWindow" Height="260" Width="400">
    <Grid>
        <Border Margin="10,10,84,0" VerticalAlignment="Top" Height="24"
                BorderBrush="Gray" BorderThickness="1">
            <TextBlock Text="Title" VerticalAlignment="Center" Margin="4" FontWeight="Bold" />
        </Border>
        <Button Content="Settings" Margin="0,10,10,0"
                Height="24" Width="69"
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Command="{Binding ShowSettingsCommand}" />
        <Border Margin="10,39,10,10" BorderBrush="Gray" BorderThickness="1">
            <TextBlock Text="Content" Margin="4" TextWrapping="Wrap" />
        </Border>
    </Grid>
</Window>