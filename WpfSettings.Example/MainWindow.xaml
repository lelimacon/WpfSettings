<Window x:Class="WpfSettings.Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSettings.Example"
        DataContext="{Binding ViewModel, RelativeSource={RelativeSource Self}}"
        mc:Ignorable="d"
        Title="My Note"
        Height="260" Width="400">

    <Window.Resources>
        <local:GenderToColorConverter x:Key="GenderToColor" />
        <local:StyleToWeightConverter x:Key="StyleToWeight" />
        <local:StyleToFontStyleConverter x:Key="StyleToFontStyle" />
    </Window.Resources>

    <Grid Background="{Binding Settings.User.Gender, Converter={StaticResource GenderToColor}}">
        <Border Margin="10,10,84,0" VerticalAlignment="Top" Height="24"
                BorderBrush="Gray" BorderThickness="1">
            <TextBlock Text="{Binding Settings.Interface.Content.Title}"
                       FontWeight="{Binding Settings.Interface.Style.TitleStyle, Converter={StaticResource StyleToWeight}}"
                       FontStyle="{Binding Settings.Interface.Style.TitleStyle, Converter={StaticResource StyleToFontStyle}}"
                       VerticalAlignment="Center" Margin="4" />
        </Border>
        <Button Content="Settings" Margin="0,10,10,0"
                Height="24" Width="69"
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Command="{Binding ShowSettingsCommand}" />
        <Border Margin="10,39,10,10" BorderBrush="Gray" BorderThickness="1">
            <TextBlock Text="{Binding Settings.Interface.Content.PageContent}"
                       FontWeight="{Binding Settings.Interface.Style.ContentStyle, Converter={StaticResource StyleToWeight}}"
                       FontStyle="{Binding Settings.Interface.Style.ContentStyle, Converter={StaticResource StyleToFontStyle}}"
                       Margin="4" TextWrapping="Wrap" />
        </Border>
    </Grid>
</Window>